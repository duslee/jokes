<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frag_bg_color"
    android:orientation="vertical" >

    <RelativeLayout style="@style/NavStyle" >

        <TextView
            style="@style/NavCenterTVStyle"
            android:layout_centerInParent="true"
            android:text="@string/app_name" />
        
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/back_selector" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cache_rl"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_marginTop="20dip"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:contentDescription="@null"
            android:src="@drawable/setting" />

        <ImageView
            android:id="@+id/right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/forward" />

        <TextView
            android:id="@+id/cache_tv"
            style="@style/SettingCacheTVStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_toLeftOf="@id/right_iv"
            android:layout_toRightOf="@id/left_iv"
            android:singleLine="true" />
    </RelativeLayout>

</LinearLayout>