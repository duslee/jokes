<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/frag3_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_bg_selector" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/frag3_tb_margin"
            android:layout_marginLeft="@dimen/frag3_tb_margin"
            android:layout_marginRight="@dimen/frag3_tb_margin"
            android:layout_marginTop="@dimen/frag3_tb_margin"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/frag3_iv"
                android:layout_width="@dimen/iv_width"
                android:layout_height="@dimen/iv_height"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/frag3_tv"
                style="@style/TVShadowStyle"
                android:layout_marginLeft="@dimen/frag3_tb_margin"
                android:singleLine="false" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/line_bg_color" />

</LinearLayout>