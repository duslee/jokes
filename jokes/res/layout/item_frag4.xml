<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/frag4_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/frag4_content"
            style="@style/DropItemContentStyle"
            android:layout_marginLeft="@dimen/drop_item_left_margin"
            android:layout_marginRight="@dimen/drop_item_right_margin"
            android:layout_marginTop="16dip" />

        <RelativeLayout
            android:id="@+id/frag4_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" >

            <ImageView
                android:id="@+id/frag4_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/frag4_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/play_selector" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dip" >

            <RelativeLayout
                android:id="@+id/up_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dip" >

                <LinearLayout
                    android:id="@+id/up_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:background="@drawable/approve_bg_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/up_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="6dip"
                        android:contentDescription="@null"
                        android:src="@drawable/up_selector" />

                    <TextView
                        android:id="@+id/up_tv"
                        style="@style/NumStyle"
                        android:layout_marginRight="8dip" />
                </LinearLayout>

                <TextView
                    android:id="@+id/add_tv1"
                    style="@style/AddNumStyle"
                    android:layout_above="@id/up_ll"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-12dip"
                    android:text="+1"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@id/up_rl" >

                <LinearLayout
                    android:id="@+id/down_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:background="@drawable/disapprove_bg_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/down_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dip"
                        android:layout_marginRight="6dip"
                        android:contentDescription="@null"
                        android:src="@drawable/down_selector" />

                    <TextView
                        android:id="@+id/down_tv"
                        style="@style/NumStyle"
                        android:layout_marginRight="8dip" />
                </LinearLayout>

                <TextView
                    android:id="@+id/add_tv2"
                    style="@style/AddNumStyle"
                    android:layout_above="@id/down_ll"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-12dip"
                    android:text="+1"
                    android:visibility="gone" />
            </RelativeLayout>
            
            <LinearLayout
                android:id="@+id/comment_ll"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dip"
                android:background="@drawable/disapprove_bg_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/comment_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="6dip"
                    android:contentDescription="@null"
                    android:src="@drawable/down_selector" />

                <TextView
                    android:id="@+id/comment_tv"
                    style="@style/NumStyle"
                    android:layout_marginRight="8dip" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dip"
            android:background="@drawable/divider_bg" />
    </LinearLayout>

</LinearLayout>